<%= for post <- @posts do %>
  <p><%= post.provider %> <a target="_blank" href="<%= if post.link, do: post.link, else: Routes.post_path(@conn, :show, post) %>" title="Teemad: <%= post.categories %>. (<%= post.datetime %>)"><%= post.title %></a>
    </p>
<% end %>

<span><%= link "New Post", to: Routes.post_path(@conn, :new) %></span>
